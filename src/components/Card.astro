---
interface Props {
	product: string;
	body: string;
	img: string;
}

const { img, product, body } = Astro.props;
---

<div class=`relative max-w-[375px] bg-[url(${img})] rounded-3xl overflow-hidden group`>
	<a href="#">
		<img src=`${img}` alt="" class="rounded-3xl max-w-[375px] transition group-hover:scale-110">
	</a>
	<a href="#" class="absolute text-white bottom-[100px] right-[30px] z-10 text-4xl uppercase font-semibold transition group-hover:scale-100">{product}</a>
	<a href="#" class="absolute bottom-0 right-0 p-5 bg-fuchsia-400 text-white text-xl rounded-3xl rounded-tr-none rounded-bl-none hover:bg-fuchsia-600 transition group-hover:scale-100">
		{body}
	</a>
</div>


